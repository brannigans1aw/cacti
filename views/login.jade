extends layout

block content
  div#login.container 
    //- Error message
    if message
      div.alert.alert-danger.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2= message
    //- Login
    div(id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2")                   
      div.panel.panel-primary
        div.panel-heading
          div.panel-title Login
        div.panel-body
          form(id="loginform" class="form-horizontal" role="form" action="/login" method="post")
            div(style="margin-bottom: 25px" class="input-group")
              span(class="input-group-addon") <span class="glyphicon glyphicon-user"></span>
              input(id="login-username" type="text" class="form-control" name="email" value="" placeholder="Email")                                       
            div.input-group
              span(class="input-group-addon") <span class="glyphicon glyphicon-lock"></span></span>
              input(id="login-password" type="password" class="form-control" name="pw" placeholder="Password")
            div.input-group
              div.checkbox
              label 
                input(id="login-remember" type="checkbox" name="rememberme" value="1")
                span  Remember me
            div(style="margin-top:10px" class="form-group")
              div.col-sm-12.controls
                button(id="btn-login" href="#" class="btn btn-primary") Login
    //- Signup
    div(id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2")
      div.panel.panel-primary
        div.panel-heading
          div.panel-title Sign Up
        div.panel-body
          form(id="signupform" class="form-horizontal" role="form" action="/signup" method="post")
            div(id="signupalert" style="display:none" class="alert alert-danger")
              p Error:
                span
            div.form-group
              label(for="email" class="col-md-3 control-label") Email
              div.col-md-9
                input(type="text" class="form-control" name="email" placeholder="Email Address")
            div.form-group
              label(for="password" class="col-md-3 control-label") Password
              div.col-md-9
                input.form-control(type='password', name='pw', placeholder='Password')
            div.form-group
              label.col-md-3.control-label(for='icode') Username
              div.col-md-9
                input.form-control(type='text', name='name', placeholder='Username')
            div.form-group                                       
              div.col-md-offset-3.col-md-9
                button#btn-signup.btn.btn-primary Sign up
